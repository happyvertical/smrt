{
  "name": "@smrt/events",
  "version": "0.37.0",
  "description": "Hierarchical event management with participant tracking and SMRT framework support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    }
  },
  "scripts": {
    "build": "VITE_BUILD_PACKAGE=events vite build --mode library",
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@smrt/core": "workspace:*",
    "@smrt/places": "workspace:*",
    "@smrt/profiles": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.6.3",
    "vite": "^7.1.7",
    "vitest": "^3.0.5"
  },
  "keywords": [
    "events",
    "calendar",
    "scheduling",
    "participants",
    "smrt",
    "typescript"
  ],
  "author": "HappyVertical",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/happyvertical/sdk.git",
    "directory": "packages/events"
  }
}
