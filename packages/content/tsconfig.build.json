{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false
  },
  "include": [
    "src/content.ts",
    "src/contents.ts",
    "src/document.ts",
    "src/utils.ts",
    "src/index.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.config.ts",
    "**/*.config.js",
    "src/app/**/*",
    "src/server.ts",
    "src/mock-smrt-client.ts",
    "node_modules",
    "dist"
  ]
}