{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist",
    // Exclude root config files that could interfere with build
    "../../playwright.config.ts",
    "../../playwright.config.js",
    "../../vite.config.ts",
    "../../vite.config.js",
    "../../vitest.config.ts",
    "../../vitest.config.js"
  ]
}