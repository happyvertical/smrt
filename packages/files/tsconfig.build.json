{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.config.ts",
    "**/*.config.js",
    "node_modules",
    "dist",
    // Files that use Node.js built-ins problematic for api-extractor
    "src/**/*.node.ts",
    "src/**/buffer-utils.ts",
    // Exclude root config files that could interfere with build
    "../../playwright.config.ts",
    "../../playwright.config.js",
    "../../vite.config.ts",
    "../../vite.config.js",
    "../../vitest.config.ts",
    "../../vitest.config.js",
    "../../*.config.ts",
    "../../*.config.js"
  ]
}