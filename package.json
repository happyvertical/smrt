{
  "name": "@have/smrt",
  "description": "smrt framework for building vertical AI agents",
  "author": "Will Griffin <willgriffin@gmail.com>",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "format": "biome format --write .",
    "format-check": "biome ci --diagnostic-level=error .",
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && lefthook install || echo 'Skipping lefthook install (not in git repository)'",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "test:coverage": "npx vitest run --coverage",
    "test:ui": "npx vitest --ui",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "clean": "rm -rf packages/*/dist packages/*/docs packages/*/tsconfig.*.tsbuildinfo .tsbuildinfo dist /*.js /*.d.ts /*.js.map /*.d.ts.map",
    "build": "pnpm -r --workspace-concurrency=4 --filter='!@smrt/products' --filter='!@have/docs' run build",
    "build:clean": "pnpm run clean && pnpm run build",
    "typecheck": "tsc --noEmit",
    "validate-build": "node scripts/validate-build.js",
    "release": "npx semantic-release",
    "release:dry-run": "npx semantic-release --dry-run",
    "release:packages": "pnpm run build && pnpm -r --workspace-concurrency=1 exec -- npx semantic-release",
    "release:packages:dry-run": "pnpm run build && pnpm -r --workspace-concurrency=1 exec -- npx semantic-release --dry-run",
    "release:preview": "node scripts/release-helper.js preview",
    "release:test": "node scripts/release-helper.js test",
    "release:validate": "node scripts/release-helper.js validate",
    "release:full": "node scripts/release-helper.js full",
    "smrt": "pnpm --filter @smrt/core cli"
  },
  "dependencies": {},
  "devDependencies": {
    "@anolilab/semantic-release-pnpm": "^2.0.4",
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "chokidar": "^4.0.1",
    "concurrently": "9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "express": "^4.21.2",
    "lefthook": "^1.11.13",
    "livereload": "^0.9.3",
    "semantic-release": "^24.2.9",
    "semantic-release-monorepo": "^8.0.2",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.7.3",
    "vite": "7.1.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "resolutions": {
    "@types/node": "24.0.0"
  },
  "pnpm": {
    "overrides": {
      "@have/ai": "file:./sdk/packages/ai",
      "@have/files": "file:./sdk/packages/files",
      "@have/logger": "file:./sdk/packages/logger",
      "@have/sql": "file:./sdk/packages/sql",
      "@have/utils": "file:./sdk/packages/utils",
      "@have/documents": "file:./sdk/packages/documents",
      "@have/geo": "file:./sdk/packages/geo",
      "@have/cache": "file:./sdk/packages/cache",
      "@have/pdf": "file:./sdk/packages/pdf",
      "@have/spider": "file:./sdk/packages/spider",
      "@have/ocr": "file:./sdk/packages/ocr",
      "@have/config": "file:./sdk/packages/config"
    }
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
