{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.config.ts",
    "**/*.config.js",
    "node_modules",
    "dist",
    // Exclude root config files that could interfere with build
    "../../playwright.config.ts",
    "../../playwright.config.js",
    "../../vite.config.ts",
    "../../vite.config.js",
    "../../vitest.config.ts",
    "../../vitest.config.js",
    "../../*.config.ts",
    "../../*.config.js",
    // Exclude browser template - loaded as string, not compiled
    "src/vite-plugin/templates/default-ui.ts"
  ]
}